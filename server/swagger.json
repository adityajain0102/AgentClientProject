          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Created Agent , Client",
            "required": true,
            "schema": {
              "type": "object",
              "required": [
                "agencyDetails",
                "clientDetails"
              ],
              "properties": {
                "agencyDetails":{"type":"object","properties":{
                  "name": {
                    "type": "string", "required":true
                  },
                  "address1": {
                    "type": "string","required":true
                  },
                  "address2":{"type":"string"},
                  "state": {
                    "type": "string","required":true
                  },
                  "city": {
                    "type": "string","required":true
                  },
                  "phonenumber": {
                    "type": "string","required":true
                  }
                  
                  }},
                "clientDetails":{"type":"object","properties":{
                  "name": {
                    "type": "string", "required":true
                  },
                  "email": {
                    "type": "string","required":true
                  },
                  "totalbill": {
                    "type": "string","required":true
                  },
                  "phonenumber": {
                    "type": "string","required":true
                  }

                  }}
               
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/api/clients/{clientId}":{
      "put": {
        "tags": [
          "client"
        ],
        "summary": "Update Client",
        "description": "Update specific  Client.",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "clientId",
            "in": "path",
            "description": "client  id",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Update Client",
            "required": true,
            "schema": {
              "type":"object",
              "required":["name","email","totalbill","phonenumber"],
              "properties":{
                "name": {
                  "type": "string", "required":true
                },
                "email": {
                  "type": "string","required":true
                },
                "totalbill": {
                  "type": "string","required":true
                },
                "phonenumber": {
                  "type": "string","required":true
                }
              }
            }
          }
        ],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    },
    "/api/clients":{
      "get": {
        "tags": [
          "client"
        ],
        "summary": "Get All Clients With order by Total Mount",
        "description": "Get All Clients.",
        "produces": [
          "application/json"
        ],
        "parameters": [
        ],
        "responses": {
          "default": {
            "description": "successful operation"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
      }
    }
